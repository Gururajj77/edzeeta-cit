rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /registrations/{registrationId} {
      allow write: if true;  // Allows anyone to write to registrations collection
      allow read: if true;   // Allows anyone to read from registrations collection
    }
    
    // Keep other collections protected
    match /{document=**} {
      allow read, write: if false;
    }
  }
}